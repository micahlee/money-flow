<h1>Connection</h1>

<%= link_to 'New Connection', new_connection_path, :"data-turbolinks" => false %> |
<%= link_to 'Dashboard', root_path %>

<table class="table">

<thead>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>
</thead>

<tbody>
  <% @connections.each do |connection| %>
    <tr>
      <td>
      <a href="<%=connection_path(connection)%>">
        <%=connection.name%>
        </a>
      </td>
      <td>
      <%= link_to 'Destroy', connection_path(connection),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</tbody>

</table>
