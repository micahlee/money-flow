<h1>Connection</h1>

<%= link_to 'New Connection', new_connection_path %> |
<%= link_to 'Dashboard', root_path %>

<table class="table">

<thead>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>
</thead>

<tbody>
  <% @connections.each do |connection| %>
    <tr>
      <td>
        <% unless connection.connection_ok? %>
            <span class="oi oi-warning text-danger" title="person" aria-hidden="true"></span>
          <% end %>

      <a href="<%=connection_path(@family, connection)%>">
        <%=connection.name%>
        </a>
      </td>
      <td>
      <%= link_to 'Destroy', connection_path(@family, connection),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</tbody>

</table>
